%hr
.row
  .col-sm-3
    %h1= pluralize @posts.except(:select).count, 'Post'

  .col-sm-9
    = form_tag url_for(action: controller.action_name), method: :get do
      .row
        .col-xs-12
          .input-group
            = text_field_tag :query, @query, placeholder: 'Query Text',
            class: 'form-control form-control-sm'
      .row
        .col-xs-6
          .input-group
            = select_tag :status, options_for_select([['Status ...', nil]] + Post::ALLOWED_STATUS, @status),
            class: 'form-control form-control-sm', data: { chosen: true }
        .col-xs-6
          .input-group
            = select_tag :published, options_for_select([['Published ...', nil], ["Published: Yes", true], ["Published: No", false]], @published),
            class: 'form-control form-control-sm', data: { chosen: true }
      .row
        .col-xs-9
          .input-group
            = number_field_tag :limit, @limit, placeholder: 'Limit',
            maxlength: 4, class: 'form-control form-control-sm'
        .col-xs-3= submit_tag 'Search',
        class: 'btn btn-info btn-sm form-control form-control-sm'
